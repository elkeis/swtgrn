@import "../../styles/themes/schemes/general.styl"
@import "../../styles/mixins.styl"

.charts
  padding 0 30px

  a
    color black !important
    text-decoration none !important

  img
    width 120px

  +m480()
    padding 0 20px !important

  &__title
    +m480()
      font-size 30px !important
      line-height 35px !important

th[class="charts__image"]
th.charts__image
  min-width 120px
  vertical-align top

  +m480()
    display block !important
    width 100% !important
    padding-bottom 15px !important

th[class="charts__info"]
th.charts__info
  padding-left 30px

  +m480()
    display block !important
    width 100% !important
    padding-left 0px !important

  p
    line-height 25px

.charts__item-title
  padding-left 10px

  +m480()
    font-size 17px !important
    line-height 20px !important
    padding-left 10px !important

.charts__number
  background-color golden
  border-radius 4px
  width 25px
  height 25px
  text-align center
  vertical-align middle
  font-weight bold
  color black
  font-size 15px